@model GymApp_v1.Models.MembershipViewModel
@{
    ViewData["Title"] = "Yeni Üyelik Paketi Ekle";
}

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container">
    <h2><i class="bi bi-plus-circle me-2"></i>Yeni Üyelik Paketi Ekle</h2>
    
    <div class="card">
        <div class="card-header">
            <h5>Üyelik Paketi Bilgileri</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="CreateMemberships" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Örn: Standart Üyelik" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <input asp-for="Description" class="form-control" placeholder="Üyelik paketinin açıklaması" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="DurationInDays" class="form-label">Süre (gün)</label>
                    <input asp-for="DurationInDays" type="number" class="form-control" placeholder="30" />
                    <span asp-validation-for="DurationInDays" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Tür</label>
                    <select asp-for="Type" asp-items="ViewBag.TypeItems" class="form-select" required>
                        <option value="" disabled selected hidden>-- Seçiniz --</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Resim</label>
                    <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Fiyat</label>
                    <input asp-for="Price"
                           type="number"
                           step="0.1"
                           min="0"
                           class="form-control"
                           placeholder="99.90" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="ViewAllMemberships" asp-controller="Membership" class="btn btn-secondary">
                        <i class="bi bi-x-lg me-1"></i>İptal
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}