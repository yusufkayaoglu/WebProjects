@model Proje1.Models.departmanlar

@{
    ViewData["Title"] = "YeniDepartman";
    Layout = "~/Views/Depart/Index.cshtml"; // Eğer _Layout.cshtml varsa onu yaz: ~/Views/Shared/_Layout.cshtml
}

<h2>Yeni Departman Ekle</h2>

<form class="form-group" method="post">
    @Html.LabelFor(x => x.DepartmanAd)
    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })

    @Html.LabelFor(x => x.Detay)
    @Html.TextBoxFor(x => x.Detay, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Ekle</button>
</form>
